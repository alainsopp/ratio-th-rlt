{
    "manifest_version": 2,
    "name": "Rollercoin Ratio",
    "version": "1.0",
    "description": "Rollercoin extension to display miner power/cost ratio.",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "48": "icons/icon48.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://rollercoin.com/marketplace"
            ],
            "js": [
                "app.js"
            ]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    }
}